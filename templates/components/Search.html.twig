<div{{ attributes }}>
    <form class="form-sm-horizontal" method="post">
        <div class="row mb-3">
            <label for="search" class="col-sm-2 col-form-label">
                Flow
            </label>
            <div class="col-sm-10">
                <div class="input-group">
                    <div class="form-select">
                        <select
                            class="form-control pull-right"
                            id="search"
                            name="search"
                        >
                            {% for flow in this.flowItems %}
                                <option value="{{ flow.key }}">{{ flow.label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <button type="submit" class="input-group-text">
                        <twig:ux:icon name="tabler:circle-dot" class="svg-inline--fa" />
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
