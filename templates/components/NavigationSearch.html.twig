<div{{ attributes }}>
    <form class="sidebar-search d-flex align-items-center" role="search" action="{{ path('app_shop_feed') }}" method="post">
        <div class="input-group">
            <input
                type="search"
                name="search"
                class="form-control ds-input"
                placeholder="Search..."
                aria-label="Search for..."
            />
            <button class="input-group-text" type="submit">
                <twig:ux:icon name="material-symbols-light:folder" class="svg-inline--fa" />
            </button>
        </div>
        {#<button
            class="btn d-sm-none py-0 px-0 ms-3 isCollapsedd"
            type="button"
        >
            {% if isCollapsed %}
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                class="bi bi-expand"
                fill="currentColor"
                viewBox="0 0 16 16"
            >
                <title>Expand</title>
                <use xlink:href="#nav-expand" />
            </svg>
            {% else %}
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                class="bi bi-expand"
                fill="currentColor"
                viewBox="0 0 16 16"
            >
                <title>Collapse</title>
                <use xlink:href="#nav-collapse" />
            </svg>
            {% endif %}
        </button>#}
    </form>
</div>
